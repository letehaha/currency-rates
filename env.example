# Copy this file to .env and adjust as needed
# cp env.example .env

# Database connection string
DATABASE_URL=sqlite:currency_rates.db?mode=rwc

# Server configuration
HOST=0.0.0.0
PORT=8080

# Default base currency for API responses (when client doesn't specify 'from' param)
# Note: Internal storage always uses USD - this only affects API response defaults
DEFAULT_API_BASE=USD

# Sync settings
SYNC_ON_STARTUP=true
# Cron expression: second minute hour day_of_month month day_of_week
# Default: 4 PM UTC daily (after ECB publishes ~16:00 CET)
SYNC_CRON=0 0 16 * * *

# Logging level
RUST_LOG=currency_rates=info,tower_http=debug

